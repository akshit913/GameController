<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/btn_down"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:background="@drawable/left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_up"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_marginBottom="616dp"
        android:background="@drawable/left"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/btn_right"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_up"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_marginBottom="552dp"
        android:background="@drawable/left"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.676"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_marginBottom="492dp"
        android:background="@drawable/left"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_circle"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_triangle"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/triangle"
        android:rotation="-35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.676"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_square"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_marginBottom="208dp"
        android:background="@drawable/square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/btn_circle"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_x"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:background="@drawable/x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_triangle"
        app:layout_constraintVertical_bias="0.006" />
</androidx.constraintlayout.widget.ConstraintLayout>